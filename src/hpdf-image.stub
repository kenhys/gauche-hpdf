(define-cproc hpdf-image-get-size (image::<hpdf-image>)
  (body <hpdf-point>
        "  ScmHpdfPoint *h = SCM_NEW(ScmHpdfPoint);
  SCM_SET_CLASS(h, SCM_CLASS_HPDF_POINT);
  h->h = HPDF_Image_GetSize(image->h);
  SCM_RESULT = h;"))

