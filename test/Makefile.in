# General info
SHELL       = @SHELL@
prefix      = @prefix@
exec_prefix = @exec_prefix@
bindir      = @bindir@
libdir      = @libdir@
datadir     = @datadir@
datarootdir = @datarootdir@
srcdir      = @srcdir@
VPATH       = $(srcdir)

# These may be overridden by make invocators
DESTDIR        =
GOSH           = @GOSH@
GAUCHE_CONFIG  = @GAUCHE_CONFIG@
GAUCHE_PACKAGE = @GAUCHE_PACKAGE@
INSTALL        = @GAUCHE_INSTALL@

# add 2007/04/12
CPPFLAGS       = -I. -I@HPDF_INCDIR@ # @CPPFLAGS@
LDFLAGS        = -lpng -lz # @LDFLAGS@
LIBS           = -L@HPDF_LIBDIR@ -lhpdf # @LIBS@


# Other parameters
SOEXT  = @SOEXT@
OBJEXT = @OBJEXT@
EXEEXT = @EXEEXT@

# Module-specific stuff
PACKAGE   = Gauche-hpdf

ARCHFILES = hpdf.$(SOEXT)
SCMFILES  = hpdf.scm
HEADERS   = 

TARGET    = $(ARCHFILES)
GENERATED = *.pdf log/*.log data/*.pdf
CONFIG_GENERATED = Makefile

GAUCHE_PKGINCDIR  = $(DESTDIR)@GAUCHE_PKGINCDIR@
GAUCHE_PKGLIBDIR  = $(DESTDIR)@GAUCHE_PKGLIBDIR@
GAUCHE_PKGARCHDIR = $(DESTDIR)@GAUCHE_PKGARCHDIR@

check :
	@rm -f log/*.log
#	$(GOSH) -I. -I../lib -I../src const.scm > log/const.log
	$(GOSH) -I. -I../lib -I../src font.scm > log/font.log
#	$(GOSH) -I. -I../lib -I../src test.scm > log/test.log
#	$(GOSH) -I. -I../lib -I../src doc.scm > log/doc.log
#	$(GOSH) -I. -I../lib -I../src page.scm > log/page.log


clean :
	rm -rf core $(TARGET) $(GENERATED) *~

distclean : clean
	rm -rf $(CONFIG_GENERATED)

maintainer-clean : clean
	rm -rf $(CONFIG_GENERATED) configure VERSION

